@page "/orders"
@using OrderManagement.Blazor.GraphQL
@inject IOrderManagementClient GraphQLClient
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Orders</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Orders</h1>
        <a href="/orders/create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Order
        </a>
    </div>

    @if (isLoading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading orders...</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @errorMessage
        </div>
    }
    else if (!orders.Any())
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> No orders found. Create your first order!
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Order Number</th>
                        <th>Customer</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th>Total Amount</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in orders)
                    {
                        <tr>
                            <td><strong>@order.OrderNumber</strong></td>
                            <td>@order.CustomerName</td>
                            <td>@order.CustomerEmail</td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(order.Status)">
                                    @order.Status
                                </span>
                            </td>
                            <td><strong>${@order.TotalAmount:N2}</strong></td>
                            <td>@order.CreatedAt.ToString("MMM dd, yyyy")</td>
                            <td>
                                <a href="/orders/@order.Id" class="btn btn-sm btn-info me-1">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <a href="/orders/@order.Id/edit" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <p class="text-muted">Total: @orders.Count orders</p>
        </div>
    }
</div>

@code {
    private List<IGetOrders_Orders> orders = new();
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadOrdersAsync();
    }

    private async Task LoadOrdersAsync()
    {
        try
        {
            isLoading = true;
            errorMessage = null;

            var result = await GraphQLClient.GetOrders.ExecuteAsync();

            if (result.Data != null)
            {
                orders = result.Data.Orders?.ToList() ?? new();
            }
            else if (result.Errors?.Count > 0)
            {
                errorMessage = string.Join(", ", result.Errors.Select(e => e.Message));
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load orders: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

