@page "/orders"
@using OrderManagement.Blazor.ViewModels
@using OrderManagement.Blazor.Resources.Pages.Orders
@rendermode @(new InteractiveServerRenderMode(prerender: false))

<PageTitle>@OrderListResources.PageTitle</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@OrderListResources.Title</h1>
        <div>
            @if (subscriptionsActive)
            {
                <span class="badge bg-success me-2">
                    <i class="bi bi-broadcast"></i> @OrderListResources.LiveUpdatesActive
                </span>
            }
            <a href="/orders/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> @OrderListResources.NewOrder
            </a>
        </div>
    </div>

    <!-- Filter & Search Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h6 class="mb-0"><i class="bi bi-funnel me-2"></i>@OrderListResources.FilterAndSearch</h6>
        </div>
        <div class="card-body">
            <div class="row g-3 align-items-end">
                <div class="col-md-5">
                    <label class="form-label fw-semibold small text-muted mb-1">
                        <i class="bi bi-search me-1"></i>@OrderListResources.Search
                    </label>
                    <input type="text" class="form-control" @bind="searchText" @bind:event="oninput"
                           placeholder="@OrderListResources.SearchPlaceholder">
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-semibold small text-muted mb-1">
                        <i class="bi bi-flag me-1"></i>@OrderListResources.Status
                    </label>
                    <select class="form-select" @bind="filterStatus">
                        <option value="">@OrderListResources.AllStatuses</option>
                        <option value="@OrderStatus.Pending">@OrderListResources.Pending</option>
                        <option value="@OrderStatus.Processing">@OrderListResources.Processing</option>
                        <option value="@OrderStatus.Completed">@OrderListResources.Completed</option>
                        <option value="@OrderStatus.Cancelled">@OrderListResources.Cancelled</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <div class="d-flex gap-2">
                        <button class="btn btn-primary flex-fill" @onclick="ApplyFiltersAsync">
                            <i class="bi bi-check-circle me-1"></i>@OrderListResources.Apply
                        </button>
                        <button class="btn btn-outline-secondary flex-fill" @onclick="ClearFiltersAsync">
                            <i class="bi bi-arrow-counterclockwise me-1"></i>@OrderListResources.Reset
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">@OrderListResources.Loading</span>
            </div>
            <p class="mt-2">@OrderListResources.LoadingOrders</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @errorMessage
        </div>
    }
    else if (!orders.Any())
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> @OrderListResources.NoOrdersFound
        </div>
    }
    else
    {
        <!-- Data Table Card -->
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th class="border-0" style="cursor: pointer;" @onclick='() => SortByAsync("ORDER_NUMBER")'>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-hash me-2"></i>@OrderListResources.OrderNumber
                                        @if (sortField == "ORDER_NUMBER")
                                        {
                                            <i class="bi bi-arrow-@(sortDescending ? "down" : "up") ms-1"></i>
                                        }
                                    </div>
                                </th>
                                <th class="border-0" style="cursor: pointer;" @onclick='() => SortByAsync("CUSTOMER_NAME")'>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-person me-2"></i>@OrderListResources.Customer
                                        @if (sortField == "CUSTOMER_NAME")
                                        {
                                            <i class="bi bi-arrow-@(sortDescending ? "down" : "up") ms-1"></i>
                                        }
                                    </div>
                                </th>
                                <th class="border-0" style="cursor: pointer;" @onclick='() => SortByAsync("CUSTOMER_EMAIL")'>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-envelope me-2"></i>@OrderListResources.Email
                                        @if (sortField == "CUSTOMER_EMAIL")
                                        {
                                            <i class="bi bi-arrow-@(sortDescending ? "down" : "up") ms-1"></i>
                                        }
                                    </div>
                                </th>
                                <th class="border-0" style="cursor: pointer;" @onclick='() => SortByAsync("STATUS")'>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-flag me-2"></i>@OrderListResources.Status
                                        @if (sortField == "STATUS")
                                        {
                                            <i class="bi bi-arrow-@(sortDescending ? "down" : "up") ms-1"></i>
                                        }
                                    </div>
                                </th>
                                <th class="border-0" style="cursor: pointer;" @onclick='() => SortByAsync("CREATED_AT")'>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-calendar me-2"></i>@OrderListResources.Created
                                        @if (sortField == "CREATED_AT")
                                        {
                                            <i class="bi bi-arrow-@(sortDescending ? "down" : "up") ms-1"></i>
                                        }
                                    </div>
                                </th>
                                <th class="border-0 text-center">
                                    <i class="bi bi-gear"></i> @OrderListResources.Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in orders)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-secondary bg-opacity-10 text-dark fw-semibold">
                                            @order.OrderNumber
                                        </span>
                                    </td>
                                    <td>
                                        <div class="fw-semibold">@order.CustomerName</div>
                                    </td>
                                    <td class="text-muted small">@order.CustomerEmail</td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(order.Status)">
                                            @order.Status
                                        </span>
                                    </td>
                                    <td class="text-muted small">
                                        <i class="bi bi-clock me-1"></i>@order.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="/orders/@order.Id" class="btn btn-outline-info" title="@OrderListResources.ViewDetails">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="/orders/@order.Id/edit" class="btn btn-outline-warning" title="@OrderListResources.EditOrder">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-danger" title="@OrderListResources.DeleteOrder" @onclick="() => ShowDeleteConfirmation(order.Id, order.OrderNumber, order.CustomerName)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Footer with Pagination & Controls -->
            <div class="card-footer bg-light">
                <div class="row align-items-center">
                    <div class="col-md-4">
                        <div class="text-muted small">
                            <i class="bi bi-list-ul me-1"></i>
                            @string.Format(OrderListResources.ShowingXofY, orders.Count, totalCount)
                        </div>
                    </div>
                    <div class="col-md-4 text-center">
                        <nav>
                            <ul class="pagination pagination-sm mb-0 justify-content-center">
                                <li class="page-item @(!hasPreviousPage ? "disabled" : "")">
                                    <button class="page-link" @onclick="FirstPageAsync" disabled="@(!hasPreviousPage)" title="@OrderListResources.FirstPage">
                                        <i class="bi bi-chevron-bar-left"></i>
                                    </button>
                                </li>
                                <li class="page-item @(!hasPreviousPage ? "disabled" : "")">
                                    <button class="page-link" @onclick="PreviousPageAsync" disabled="@(!hasPreviousPage)" title="@OrderListResources.PreviousPage">
                                        <i class="bi bi-chevron-left"></i>
                                    </button>
                                </li>
                                <li class="page-item active">
                                    <span class="page-link">
                                        <strong>@string.Format(OrderListResources.Page, currentPageNumber)</strong>
                                    </span>
                                </li>
                                <li class="page-item @(!hasNextPage ? "disabled" : "")">
                                    <button class="page-link" @onclick="NextPageAsync" disabled="@(!hasNextPage)" title="@OrderListResources.NextPage">
                                        <i class="bi bi-chevron-right"></i>
                                    </button>
                                </li>
                                <li class="page-item @(!hasNextPage ? "disabled" : "")">
                                    <button class="page-link" @onclick="LastPageAsync" disabled="@(!hasNextPage)" title="@OrderListResources.LastPage">
                                        <i class="bi bi-chevron-bar-right"></i>
                                    </button>
                                </li>
                            </ul>
                        </nav>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex align-items-center justify-content-end gap-2">
                            <label class="form-label mb-0 text-muted small">
                                <i class="bi bi-grid-3x3-gap me-1"></i>@OrderListResources.PerPage
                            </label>
                            <select class="form-select form-select-sm" style="width: auto;" @bind="pageSize" @bind:after="ApplyFiltersAsync">
                                <option value="5">5</option>
                                <option value="10">10</option>
                                <option value="20">20</option>
                                <option value="50">50</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Delete Confirmation Modal -->
    @if (showDeleteConfirmation)
    {
        <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@OrderListResources.ConfirmDelete
                        </h5>
                        <button type="button" class="btn-close btn-close-white" @onclick="CancelDelete"></button>
                    </div>
                    <div class="modal-body">
                        <p class="mb-2"><strong>@OrderListResources.DeleteConfirmMessage</strong></p>
                        <p class="text-muted mb-0">
                            @OrderListResources.OrderNumber <strong>@deleteOrderNumber</strong><br />
                            @OrderListResources.Customer <strong>@deleteCustomerName</strong><br />
                            @OrderListResources.DeleteWarning
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CancelDelete">
                            <i class="bi bi-x-circle me-1"></i>@OrderListResources.Cancel
                        </button>
                        <button type="button" class="btn btn-danger" @onclick="ConfirmDelete" disabled="@isDeleting">
                            @if (isDeleting)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                <span>@OrderListResources.Deleting</span>
                            }
                            else
                            {
                                <i class="bi bi-trash me-1"></i>
                                <span>@OrderListResources.DeleteOrder</span>
                            }
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
