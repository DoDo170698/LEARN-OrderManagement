    private string GetStatusBadgeClass(OrderManagement.Blazor.GraphQL.OrderStatus status)
    {
        return status switch
        {
            OrderManagement.Blazor.GraphQL.OrderStatus.Pending => "bg-warning text-dark",
            OrderManagement.Blazor.GraphQL.OrderStatus.Processing => "bg-info",
            OrderManagement.Blazor.GraphQL.OrderStatus.Completed => "bg-success",
            OrderManagement.Blazor.GraphQL.OrderStatus.Cancelled => "bg-danger",
            _ => "bg-secondary"
        };
