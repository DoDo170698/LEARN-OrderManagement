@page "/orders"
@using OrderManagement.Blazor.ViewModels
@rendermode @(new InteractiveServerRenderMode(prerender: false))

<PageTitle>Orders</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Orders</h1>
        <div>
            @if (subscriptionsActive)
            {
                <span class="badge bg-success me-2">
                    <i class="bi bi-broadcast"></i> Live Updates Active
                </span>
            }
            <a href="/orders/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Order
            </a>
        </div>
    </div>

    <!-- Filter & Search Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h6 class="mb-0"><i class="bi bi-funnel me-2"></i>Filter & Search</h6>
        </div>
        <div class="card-body">
            <div class="row g-3 align-items-end">
                <div class="col-md-5">
                    <label class="form-label fw-semibold small text-muted mb-1">
                        <i class="bi bi-search me-1"></i>SEARCH
                    </label>
                    <input type="text" class="form-control" @bind="searchText" @bind:event="oninput"
                           placeholder="Order number, customer name, or email...">
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-semibold small text-muted mb-1">
                        <i class="bi bi-flag me-1"></i>STATUS
                    </label>
                    <select class="form-select" @bind="filterStatus">
                        <option value="">All Statuses</option>
                        <option value="@OrderStatus.Pending">Pending</option>
                        <option value="@OrderStatus.Processing">Processing</option>
                        <option value="@OrderStatus.Completed">Completed</option>
                        <option value="@OrderStatus.Cancelled">Cancelled</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <div class="d-flex gap-2">
                        <button class="btn btn-primary flex-fill" @onclick="ApplyFiltersAsync">
                            <i class="bi bi-check-circle me-1"></i>Apply Filters
                        </button>
                        <button class="btn btn-outline-secondary flex-fill" @onclick="ClearFiltersAsync">
                            <i class="bi bi-arrow-counterclockwise me-1"></i>Reset
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading orders...</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @errorMessage
        </div>
    }
    else if (!orders.Any())
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> No orders found. Create your first order!
        </div>
    }
    else
    {
        <!-- Data Table Card -->
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th class="border-0" style="cursor: pointer;" @onclick='() => SortByAsync("ORDER_NUMBER")'>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-hash me-2"></i>Order Number
                                        @if (sortField == "ORDER_NUMBER")
                                        {
                                            <i class="bi bi-arrow-@(sortDescending ? "down" : "up") ms-1"></i>
                                        }
                                    </div>
                                </th>
                                <th class="border-0" style="cursor: pointer;" @onclick='() => SortByAsync("CUSTOMER_NAME")'>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-person me-2"></i>Customer
                                        @if (sortField == "CUSTOMER_NAME")
                                        {
                                            <i class="bi bi-arrow-@(sortDescending ? "down" : "up") ms-1"></i>
                                        }
                                    </div>
                                </th>
                                <th class="border-0">
                                    <i class="bi bi-envelope me-2"></i>Email
                                </th>
                                <th class="border-0" style="cursor: pointer;" @onclick='() => SortByAsync("STATUS")'>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-flag me-2"></i>Status
                                        @if (sortField == "STATUS")
                                        {
                                            <i class="bi bi-arrow-@(sortDescending ? "down" : "up") ms-1"></i>
                                        }
                                    </div>
                                </th>
                                <th class="border-0" style="cursor: pointer;" @onclick='() => SortByAsync("CREATED_AT")'>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-calendar me-2"></i>Created
                                        @if (sortField == "CREATED_AT")
                                        {
                                            <i class="bi bi-arrow-@(sortDescending ? "down" : "up") ms-1"></i>
                                        }
                                    </div>
                                </th>
                                <th class="border-0 text-center">
                                    <i class="bi bi-gear"></i> Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in orders)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-secondary bg-opacity-10 text-dark fw-semibold">
                                            @order.OrderNumber
                                        </span>
                                    </td>
                                    <td>
                                        <div class="fw-semibold">@order.CustomerName</div>
                                    </td>
                                    <td class="text-muted small">@order.CustomerEmail</td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(order.Status)">
                                            @order.Status
                                        </span>
                                    </td>
                                    <td class="text-muted small">
                                        <i class="bi bi-clock me-1"></i>@order.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="/orders/@order.Id" class="btn btn-outline-info" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="/orders/@order.Id/edit" class="btn btn-outline-warning" title="Edit Order">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Footer with Pagination & Controls -->
            <div class="card-footer bg-light">
                <div class="row align-items-center">
                    <div class="col-md-4">
                        <div class="text-muted small">
                            <i class="bi bi-list-ul me-1"></i>
                            Showing <strong>@orders.Count</strong> orders
                        </div>
                    </div>
                    <div class="col-md-4 text-center">
                        <nav>
                            <ul class="pagination pagination-sm mb-0 justify-content-center">
                                <li class="page-item @(!hasPreviousPage ? "disabled" : "")">
                                    <button class="page-link" @onclick="FirstPageAsync" disabled="@(!hasPreviousPage)" title="First Page">
                                        <i class="bi bi-chevron-bar-left"></i>
                                    </button>
                                </li>
                                <li class="page-item @(!hasPreviousPage ? "disabled" : "")">
                                    <button class="page-link" @onclick="PreviousPageAsync" disabled="@(!hasPreviousPage)" title="Previous Page">
                                        <i class="bi bi-chevron-left"></i> Prev
                                    </button>
                                </li>
                                <li class="page-item active">
                                    <span class="page-link bg-primary border-primary">
                                        <strong>Page @currentPageNumber</strong>
                                    </span>
                                </li>
                                <li class="page-item @(!hasNextPage ? "disabled" : "")">
                                    <button class="page-link" @onclick="NextPageAsync" disabled="@(!hasNextPage)" title="Next Page">
                                        Next <i class="bi bi-chevron-right"></i>
                                    </button>
                                </li>
                                <li class="page-item @(!hasNextPage ? "disabled" : "")">
                                    <button class="page-link" @onclick="LastPageAsync" disabled="@(!hasNextPage)" title="Last Page">
                                        <i class="bi bi-chevron-bar-right"></i>
                                    </button>
                                </li>
                            </ul>
                        </nav>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex align-items-center justify-content-end gap-2">
                            <label class="form-label mb-0 text-muted small">
                                <i class="bi bi-grid-3x3-gap me-1"></i>Per page:
                            </label>
                            <select class="form-select form-select-sm" style="width: auto;" @bind="pageSize" @bind:after="ApplyFiltersAsync">
                                <option value="5">5</option>
                                <option value="10">10</option>
                                <option value="20">20</option>
                                <option value="50">50</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
