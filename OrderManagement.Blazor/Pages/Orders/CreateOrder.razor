@page "/orders/create"
@using OrderManagement.Blazor.Resources.Pages.Orders
@rendermode @(new InteractiveServerRenderMode(prerender: false))

<PageTitle>@CreateOrderResources.PageTitle</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-1">
                <i class="bi bi-plus-circle"></i> @CreateOrderResources.CreateNewOrder
            </h1>
        </div>
        <div>
            <a href="/orders" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> @CreateOrderResources.BackToList
            </a>
        </div>
    </div>

    @if (errorMessage != null)
    {
        <div class="alert alert-danger shadow-sm" role="alert">
            <h5><i class="bi bi-exclamation-triangle-fill me-2"></i>@CreateOrderResources.Error</h5>
            <p class="mb-0">@errorMessage</p>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-plus-circle me-2"></i>@CreateOrderResources.NewOrder
            </h5>
        </div>
        <div class="card-body">
            <EditForm Model="@orderInput" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />

                <!-- Customer Information -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h6 class="text-muted text-uppercase mb-3">
                            <i class="bi bi-person-circle me-2"></i>@CreateOrderResources.CustomerInformation
                        </h6>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">@CreateOrderResources.CustomerName <span class="text-danger">*</span></label>
                            <InputText @bind-Value="orderInput.CustomerName" class="form-control" placeholder="@CreateOrderResources.CustomerNamePlaceholder" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">@CreateOrderResources.CustomerEmail <span class="text-danger">*</span></label>
                            <InputText @bind-Value="orderInput.CustomerEmail" class="form-control" type="email" placeholder="@CreateOrderResources.CustomerEmailPlaceholder" />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h6 class="text-muted text-uppercase mb-3">
                            <i class="bi bi-info-circle me-2"></i>@CreateOrderResources.OrderInformation
                        </h6>
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-1"></i>
                            <small>@((MarkupString)CreateOrderResources.StatusPendingInfo)</small>
                        </div>
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-1"></i>
                            <small>@CreateOrderResources.AddItemsInfo</small>
                        </div>
                    </div>
                </div>

                <hr />

                <!-- Order Items Section -->
                <div class="mb-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="text-muted text-uppercase mb-0">
                            <i class="bi bi-box-seam me-2"></i>@CreateOrderResources.OrderItems
                        </h6>
                        <button type="button" class="btn btn-sm btn-primary" @onclick="AddItem">
                            <i class="bi bi-plus-circle me-1"></i>@CreateOrderResources.AddItem
                        </button>
                    </div>

                    @foreach (var (item, index) in orderInput.Items.Select((item, index) => (item, index)))
                    {
                        <div class="card mb-3 shadow-sm">
                            <div class="card-body">
                                <div class="row align-items-end">
                                    <div class="col-md-4">
                                        <label class="form-label fw-semibold small">@CreateOrderResources.ProductName <span class="text-danger">*</span></label>
                                        <InputText @bind-Value="item.ProductName" class="form-control" placeholder="@CreateOrderResources.ProductNamePlaceholder" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label fw-semibold small">@CreateOrderResources.Quantity <span class="text-danger">*</span></label>
                                        <InputNumber @bind-Value="item.Quantity" class="form-control" min="1" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label fw-semibold small">@CreateOrderResources.UnitPrice <span class="text-danger">*</span></label>
                                        <InputNumber @bind-Value="item.UnitPrice" class="form-control" step="0.01" min="0" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label fw-semibold small">@CreateOrderResources.Subtotal</label>
                                        <div class="d-flex align-items-center h-100">
                                            <span class="text-primary fs-5">@($"${(item.Quantity * item.UnitPrice):N2}")</span>
                                        </div>
                                    </div>
                                    <div class="col-md-1">
                                        @if (orderInput.Items.Count > 1)
                                        {
                                            <button type="button" class="btn btn-danger btn-sm w-100" @onclick="() => RemoveItem(index)" title="@CreateOrderResources.RemoveItem">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <hr />

                <!-- Total & Actions -->
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-0">
                            <i class="bi bi-calculator me-2"></i>@CreateOrderResources.Total
                            <span class="text-success ms-2">@($"${CalculateTotal():N2}")</span>
                        </h5>
                        <small class="text-muted">@string.Format(CreateOrderResources.Items, orderInput.Items.Count)</small>
                    </div>
                    <div>
                        <button type="button" class="btn btn-outline-secondary me-2" @onclick="Cancel">
                            <i class="bi bi-x-circle me-1"></i>@CreateOrderResources.Cancel
                        </button>
                        <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                            @if (isSubmitting)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                <span>@CreateOrderResources.Creating</span>
                            }
                            else
                            {
                                <i class="bi bi-check-circle me-1"></i>
                                <span>@CreateOrderResources.CreateOrderButton</span>
                            }
                        </button>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>
</div>
