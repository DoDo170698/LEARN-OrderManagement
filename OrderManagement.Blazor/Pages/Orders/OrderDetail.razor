@page "/orders/{id:guid}"
@using OrderManagement.Blazor.GraphQL
@using OrderManagement.Blazor.Resources.Pages.Orders
@rendermode @(new InteractiveServerRenderMode(prerender: false))

<PageTitle>@OrderDetailResources.PageTitle</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-1">
                <i class="bi bi-receipt"></i> @OrderDetailResources.OrderDetails
            </h1>
            @if (order != null)
            {
                <p class="text-muted mb-0">
                    <i class="bi bi-hash"></i> @order.OrderNumber
                </p>
            }
        </div>
        <div>
            <a href="/orders" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left"></i> @OrderDetailResources.Back
            </a>
            @if (order != null)
            {
                <a href="/orders/@Id/edit" class="btn btn-warning me-2">
                    <i class="bi bi-pencil"></i> @OrderDetailResources.EditOrder
                </a>
                <button class="btn btn-danger" @onclick="ShowDeleteConfirmation">
                    <i class="bi bi-trash"></i> @OrderDetailResources.DeleteOrder
                </button>
            }
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">@OrderDetailResources.Loading</span>
            </div>
            <p class="mt-3 text-muted">@OrderDetailResources.LoadingOrderDetails</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger shadow-sm" role="alert">
            <h5><i class="bi bi-exclamation-triangle-fill me-2"></i>@OrderDetailResources.Error</h5>
            <p class="mb-0">@errorMessage</p>
        </div>
    }
    else if (order == null)
    {
        <div class="alert alert-warning shadow-sm" role="alert">
            <h5><i class="bi bi-info-circle-fill me-2"></i>@OrderDetailResources.NotFound</h5>
            <p class="mb-0">@OrderDetailResources.OrderNotFound</p>
        </div>
    }
    else
    {
        <!-- Order Summary Card -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-file-earmark-text me-2"></i>@OrderDetailResources.OrderSummary
                    </h5>
                    <span class="badge @GetStatusBadgeClass(order.Status) fs-6">
                        @order.Status
                    </span>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Customer Information -->
                    <div class="col-md-6">
                        <h6 class="text-muted text-uppercase mb-3">
                            <i class="bi bi-person-circle me-2"></i>@OrderDetailResources.CustomerInformation
                        </h6>
                        <div class="mb-3">
                            <label class="text-muted small mb-1">@OrderDetailResources.Name</label>
                            <div class="fw-semibold">@order.CustomerName</div>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted small mb-1">@OrderDetailResources.Email</label>
                            <div>
                                <i class="bi bi-envelope me-1"></i>
                                <a href="mailto:@order.CustomerEmail">@order.CustomerEmail</a>
                            </div>
                        </div>
                    </div>

                    <!-- Order Metadata -->
                    <div class="col-md-6">
                        <h6 class="text-muted text-uppercase mb-3">
                            <i class="bi bi-clock-history me-2"></i>@OrderDetailResources.OrderTimeline
                        </h6>
                        <div class="mb-3">
                            <label class="text-muted small mb-1">@OrderDetailResources.Created</label>
                            <div>
                                <i class="bi bi-calendar-plus me-1"></i>
                                @order.CreatedAt.ToString("MMM dd, yyyy 'at' HH:mm")
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted small mb-1">@OrderDetailResources.LastUpdated</label>
                            <div>
                                <i class="bi bi-calendar-check me-1"></i>
                                @order.UpdatedAt.ToString("MMM dd, yyyy 'at' HH:mm")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Items Card -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="bi bi-box-seam me-2"></i>@OrderDetailResources.OrderItems
                    <span class="badge bg-secondary ms-2">@order.Items.Count</span>
                </h5>
            </div>
            <div class="card-body p-0">
                @if (!order.Items.Any())
                {
                    <div class="p-4 text-center text-muted">
                        <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                        <p class="mb-0">@OrderDetailResources.NoItems</p>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="border-0">
                                        <i class="bi bi-box me-2"></i>@OrderDetailResources.Product
                                    </th>
                                    <th class="border-0 text-center">
                                        <i class="bi bi-hash me-2"></i>@OrderDetailResources.Quantity
                                    </th>
                                    <th class="border-0 text-end">
                                        <i class="bi bi-currency-dollar me-2"></i>@OrderDetailResources.UnitPrice
                                    </th>
                                    <th class="border-0 text-end">
                                        <i class="bi bi-calculator me-2"></i>@OrderDetailResources.Subtotal
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in order.Items)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-box text-primary me-2"></i>
                                                <strong>@item.ProductName</strong>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-secondary bg-opacity-10 text-dark">
                                                @item.Quantity
                                            </span>
                                        </td>
                                        <td class="text-end text-muted">@($"${item.UnitPrice:N2}")</td>
                                        <td class="text-end">
                                            <strong class="text-primary">@($"${item.Subtotal:N2}")</strong>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-light border-top border-2">
                                <tr>
                                    <td colspan="3" class="text-end fw-bold fs-5">
                                        <i class="bi bi-calculator-fill me-2"></i>@OrderDetailResources.OrderTotal
                                    </td>
                                    <td class="text-end">
                                        <span class="badge bg-success fs-5 px-3 py-2">
                                            @($"${order.TotalAmount:N2}")
                                        </span>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
            </div>
        </div>

    }

    <!-- Delete Confirmation Modal -->
    @if (showDeleteConfirmation)
    {
        <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@OrderDetailResources.ConfirmDelete
                        </h5>
                        <button type="button" class="btn-close btn-close-white" @onclick="CancelDelete"></button>
                    </div>
                    <div class="modal-body">
                        <p class="mb-2"><strong>@OrderDetailResources.DeleteConfirmMessage</strong></p>
                        @if (order != null)
                        {
                            <p class="text-muted mb-0">
                                @OrderDetailResources.OrderNumber <strong>@order.OrderNumber</strong><br />
                                @OrderDetailResources.Customer <strong>@order.CustomerName</strong><br />
                                @OrderDetailResources.DeleteWarning
                            </p>
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CancelDelete">
                            <i class="bi bi-x-circle me-1"></i>@OrderDetailResources.Cancel
                        </button>
                        <button type="button" class="btn btn-danger" @onclick="ConfirmDelete" disabled="@isDeleting">
                            @if (isDeleting)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                <span>@OrderDetailResources.Deleting</span>
                            }
                            else
                            {
                                <i class="bi bi-trash me-1"></i>
                                <span>@OrderDetailResources.DeleteOrder</span>
                            }
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
