@page "/orders/{id:guid}/edit"
@inject IOrderManagementClient GraphQLClient
@inject NavigationManager Navigation
@rendermode @(new InteractiveServerRenderMode(prerender: false))

<PageTitle>Edit Order</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-1">
                <i class="bi bi-pencil-square"></i> Edit Order
            </h1>
            @if (order != null)
            {
                <p class="text-muted mb-0">
                    <i class="bi bi-hash"></i> @order.OrderNumber
                </p>
            }
        </div>
        <div>
            <a href="/orders/@Id" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Details
            </a>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 text-muted">Loading order...</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger shadow-sm" role="alert">
            <h5><i class="bi bi-exclamation-triangle-fill me-2"></i>Error</h5>
            <p class="mb-0">@errorMessage</p>
        </div>
    }
    else if (order == null)
    {
        <div class="alert alert-warning shadow-sm" role="alert">
            <h5><i class="bi bi-info-circle-fill me-2"></i>Not Found</h5>
            <p class="mb-0">Order not found.</p>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">
                    <i class="bi bi-pencil me-2"></i>Editing Order @order.OrderNumber
                </h5>
            </div>
            <div class="card-body">
                <EditForm Model="@orderInput" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />

                    <!-- Customer Information & Status -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted text-uppercase mb-3">
                                <i class="bi bi-person-circle me-2"></i>Customer Information
                            </h6>
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Customer Name <span class="text-danger">*</span></label>
                                <InputText @bind-Value="orderInput.CustomerName" class="form-control" placeholder="Enter customer name" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Customer Email <span class="text-danger">*</span></label>
                                <InputText @bind-Value="orderInput.CustomerEmail" class="form-control" type="email" placeholder="customer@example.com" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h6 class="text-muted text-uppercase mb-3">
                                <i class="bi bi-flag me-2"></i>Order Status
                            </h6>
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Status <span class="text-danger">*</span></label>
                                <InputSelect @bind-Value="selectedStatus" class="form-select">
                                    <option value="@OrderStatus.Pending">Pending</option>
                                    <option value="@OrderStatus.Processing">Processing</option>
                                    <option value="@OrderStatus.Completed">Completed</option>
                                    <option value="@OrderStatus.Cancelled">Cancelled</option>
                                </InputSelect>
                            </div>
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle me-1"></i>
                                <small>You can update customer info, status, and order items</small>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <!-- Order Items Section -->
                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h6 class="text-muted text-uppercase mb-0">
                                <i class="bi bi-box-seam me-2"></i>Order Items
                            </h6>
                            <button type="button" class="btn btn-sm btn-primary" @onclick="AddItem">
                                <i class="bi bi-plus-circle me-1"></i>Add Item
                            </button>
                        </div>

                        @foreach (var (item, index) in orderInput.Items.Select((item, index) => (item, index)))
                        {
                            <div class="card mb-3 shadow-sm">
                                <div class="card-body">
                                    <div class="row align-items-end">
                                        <div class="col-md-4">
                                            <label class="form-label fw-semibold small">Product Name <span class="text-danger">*</span></label>
                                            <InputText @bind-Value="item.ProductName" class="form-control" placeholder="Product name" />
                                        </div>
                                        <div class="col-md-2">
                                            <label class="form-label fw-semibold small">Quantity <span class="text-danger">*</span></label>
                                            <InputNumber @bind-Value="item.Quantity" class="form-control" min="1" />
                                        </div>
                                        <div class="col-md-3">
                                            <label class="form-label fw-semibold small">Unit Price <span class="text-danger">*</span></label>
                                            <InputNumber @bind-Value="item.UnitPrice" class="form-control" step="0.01" min="0" />
                                        </div>
                                        <div class="col-md-2">
                                            <label class="form-label fw-semibold small">Subtotal</label>
                                            <div class="input-group">
                                                <span class="input-group-text">$</span>
                                                <input type="text" class="form-control" value="@($"{(item.Quantity * item.UnitPrice):N2}")" readonly />
                                            </div>
                                        </div>
                                        <div class="col-md-1">
                                            @if (orderInput.Items.Count > 1)
                                            {
                                                <button type="button" class="btn btn-danger btn-sm w-100" @onclick="() => RemoveItem(index)" title="Remove item">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <hr />

                    <!-- Total & Actions -->
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-0">
                                <i class="bi bi-calculator me-2"></i>Total:
                                <span class="text-success ms-2">@($"${CalculateTotal():N2}")</span>
                            </h5>
                            <small class="text-muted">@orderInput.Items.Count item(s)</small>
                        </div>
                        <div>
                            <button type="button" class="btn btn-outline-secondary me-2" @onclick="Cancel">
                                <i class="bi bi-x-circle me-1"></i>Cancel
                            </button>
                            <button type="submit" class="btn btn-warning" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>Updating...</span>
                                }
                                else
                                {
                                    <i class="bi bi-check-circle me-1"></i>
                                    <span>Update Order</span>
                                }
                            </button>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public Guid Id { get; set; }

    private IGetOrderDetails_OrderById? order;
    private OrderInput orderInput = new();
    private string? selectedStatus;

    private bool isLoading = true;
    private bool isSubmitting = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadOrderAsync();
    }

    private async Task LoadOrderAsync()
    {
        try
        {
            isLoading = true;
            errorMessage = null;

            var result = await GraphQLClient.GetOrderDetails.ExecuteAsync(Id);

            if (result.Data?.OrderById != null)
            {
                order = result.Data.OrderById;

                // Populate form with current values
                orderInput.CustomerName = order.CustomerName;
                orderInput.CustomerEmail = order.CustomerEmail;
                selectedStatus = order.Status.ToString();

                // Load existing items
                orderInput.Items = order.Items.Select(i => new OrderItemInput
                {
                    ProductName = i.ProductName,
                    Quantity = i.Quantity,
                    UnitPrice = i.UnitPrice
                }).ToList();

                // Ensure at least one item
                if (!orderInput.Items.Any())
                {
                    orderInput.Items.Add(new OrderItemInput());
                }
            }
            else if (result.Errors?.Count > 0)
            {
                errorMessage = string.Join(", ", result.Errors.Select(e => e.Message));
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load order: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void AddItem()
    {
        orderInput.Items.Add(new OrderItemInput());
    }

    private void RemoveItem(int index)
    {
        if (orderInput.Items.Count > 1)
        {
            orderInput.Items.RemoveAt(index);
        }
    }

    private decimal CalculateTotal()
    {
        return orderInput.Items.Sum(i => i.Quantity * i.UnitPrice);
    }

    private void Cancel()
    {
        Navigation.NavigateTo($"/orders/{Id}");
    }

    private async Task HandleSubmit()
    {
        try
        {
            isSubmitting = true;
            errorMessage = null;

            if (order == null)
            {
                errorMessage = "Order data not loaded.";
                return;
            }

            // Validation
            if (string.IsNullOrWhiteSpace(orderInput.CustomerName))
            {
                errorMessage = "Customer name is required.";
                return;
            }

            if (string.IsNullOrWhiteSpace(orderInput.CustomerEmail))
            {
                errorMessage = "Customer email is required.";
                return;
            }

            if (orderInput.Items.Any(i => string.IsNullOrWhiteSpace(i.ProductName)))
            {
                errorMessage = "All items must have a product name.";
                return;
            }

            if (orderInput.Items.Any(i => i.Quantity <= 0))
            {
                errorMessage = "All items must have a quantity greater than 0.";
                return;
            }

            if (orderInput.Items.Any(i => i.UnitPrice <= 0))
            {
                errorMessage = "All items must have a unit price greater than 0.";
                return;
            }

            // Parse status
            OrderStatus? parsedStatus = null;
            if (!string.IsNullOrEmpty(selectedStatus))
            {
                parsedStatus = Enum.Parse<OrderStatus>(selectedStatus);
            }

            // Map to GraphQL input
            var input = new UpdateOrderInput
            {
                Id = Id,
                CustomerName = orderInput.CustomerName,
                CustomerEmail = orderInput.CustomerEmail,
                Status = parsedStatus,
                Items = orderInput.Items.Select(i => new CreateOrderItemInput
                {
                    ProductName = i.ProductName,
                    Quantity = i.Quantity,
                    UnitPrice = i.UnitPrice
                }).ToList()
            };

            var result = await GraphQLClient.UpdateOrder.ExecuteAsync(input);

            if (result.Data?.UpdateOrder?.Order != null)
            {
                // Navigate to detail page
                Navigation.NavigateTo($"/orders/{Id}");
            }
            else if (result.Errors?.Count > 0)
            {
                errorMessage = string.Join(", ", result.Errors.Select(e => e.Message));
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to update order: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    // Local input models for form binding (same as CreateOrder)
    public class OrderInput
    {
        public string CustomerName { get; set; } = string.Empty;
        public string CustomerEmail { get; set; } = string.Empty;
        public List<OrderItemInput> Items { get; set; } = new();
    }

    public class OrderItemInput
    {
        public string ProductName { get; set; } = string.Empty;
        public int Quantity { get; set; } = 1;
        public decimal UnitPrice { get; set; } = 0;
    }
}
