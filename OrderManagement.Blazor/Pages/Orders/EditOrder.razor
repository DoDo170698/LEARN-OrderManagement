@page "/orders/{id:guid}/edit"
@using OrderManagement.Blazor.Resources.Pages.Orders
@rendermode @(new InteractiveServerRenderMode(prerender: false))

<PageTitle>@EditOrderResources.PageTitle</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-1">
                <i class="bi bi-pencil-square"></i> @EditOrderResources.EditOrderTitle
            </h1>
            @if (order != null)
            {
                <p class="text-muted mb-0">
                    <i class="bi bi-hash"></i> @order.OrderNumber
                </p>
            }
        </div>
        <div>
            <a href="/orders/@Id" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> @EditOrderResources.BackToDetails
            </a>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">@EditOrderResources.Loading</span>
            </div>
            <p class="mt-3 text-muted">@EditOrderResources.LoadingOrder</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger shadow-sm" role="alert">
            <h5><i class="bi bi-exclamation-triangle-fill me-2"></i>@EditOrderResources.Error</h5>
            <p class="mb-0">@errorMessage</p>
        </div>
    }
    else if (order == null)
    {
        <div class="alert alert-warning shadow-sm" role="alert">
            <h5><i class="bi bi-info-circle-fill me-2"></i>@EditOrderResources.NotFound</h5>
            <p class="mb-0">@EditOrderResources.OrderNotFound</p>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">
                    <i class="bi bi-pencil me-2"></i>@string.Format(EditOrderResources.EditingOrder, order.OrderNumber)
                </h5>
            </div>
            <div class="card-body">
                <EditForm Model="@orderInput" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />

                    <!-- Customer Information & Status -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted text-uppercase mb-3">
                                <i class="bi bi-person-circle me-2"></i>@EditOrderResources.CustomerInformation
                            </h6>
                            <div class="mb-3">
                                <label class="form-label fw-semibold">@EditOrderResources.CustomerName <span class="text-danger">*</span></label>
                                <InputText @bind-Value="orderInput.CustomerName" class="form-control" placeholder="@EditOrderResources.CustomerNamePlaceholder" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-semibold">@EditOrderResources.CustomerEmail <span class="text-danger">*</span></label>
                                <InputText @bind-Value="orderInput.CustomerEmail" class="form-control" type="email" placeholder="@EditOrderResources.CustomerEmailPlaceholder" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h6 class="text-muted text-uppercase mb-3">
                                <i class="bi bi-flag me-2"></i>@EditOrderResources.OrderStatus
                            </h6>
                            <div class="mb-3">
                                <label class="form-label fw-semibold">@EditOrderResources.Status <span class="text-danger">*</span></label>
                                <InputSelect @bind-Value="selectedStatus" class="form-select">
                                    <option value="@OrderStatus.Pending">@EditOrderResources.Pending</option>
                                    <option value="@OrderStatus.Processing">@EditOrderResources.Processing</option>
                                    <option value="@OrderStatus.Completed">@EditOrderResources.Completed</option>
                                    <option value="@OrderStatus.Cancelled">@EditOrderResources.Cancelled</option>
                                </InputSelect>
                            </div>
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle me-1"></i>
                                <small>@EditOrderResources.UpdateInfo</small>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <!-- Order Items Section -->
                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h6 class="text-muted text-uppercase mb-0">
                                <i class="bi bi-box-seam me-2"></i>@EditOrderResources.OrderItems
                            </h6>
                            <button type="button" class="btn btn-sm btn-primary" @onclick="AddItem">
                                <i class="bi bi-plus-circle me-1"></i>@EditOrderResources.AddItem
                            </button>
                        </div>

                        @foreach (var (item, index) in orderInput.Items.Select((item, index) => (item, index)))
                        {
                            <div class="card mb-3 shadow-sm">
                                <div class="card-body">
                                    <div class="row align-items-end">
                                        <div class="col-md-4">
                                            <label class="form-label fw-semibold small">@EditOrderResources.ProductName <span class="text-danger">*</span></label>
                                            <InputText @bind-Value="item.ProductName" class="form-control" placeholder="@EditOrderResources.ProductNamePlaceholder" />
                                        </div>
                                        <div class="col-md-2">
                                            <label class="form-label fw-semibold small">@EditOrderResources.Quantity <span class="text-danger">*</span></label>
                                            <InputNumber @bind-Value="item.Quantity" class="form-control" min="1" />
                                        </div>
                                        <div class="col-md-3">
                                            <label class="form-label fw-semibold small">@EditOrderResources.UnitPrice <span class="text-danger">*</span></label>
                                            <InputNumber @bind-Value="item.UnitPrice" class="form-control" step="0.01" min="0" />
                                        </div>
                                        <div class="col-md-2">
                                            <label class="form-label fw-semibold small">@EditOrderResources.Subtotal</label>
                                            <div class="d-flex align-items-center h-100">
                                                <span class="text-primary fs-5">@($"${(item.Quantity * item.UnitPrice):N2}")</span>
                                            </div>
                                        </div>
                                        <div class="col-md-1">
                                            @if (orderInput.Items.Count > 1)
                                            {
                                                <button type="button" class="btn btn-danger btn-sm w-100" @onclick="() => RemoveItem(index)" title="@EditOrderResources.RemoveItem">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <hr />

                    <!-- Total & Actions -->
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-0">
                                <i class="bi bi-calculator me-2"></i>@EditOrderResources.Total
                                <span class="text-success ms-2">@($"${CalculateTotal():N2}")</span>
                            </h5>
                            <small class="text-muted">@string.Format(EditOrderResources.Items, orderInput.Items.Count)</small>
                        </div>
                        <div>
                            <button type="button" class="btn btn-outline-secondary me-2" @onclick="Cancel">
                                <i class="bi bi-x-circle me-1"></i>@EditOrderResources.Cancel
                            </button>
                            <button type="submit" class="btn btn-warning" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>@EditOrderResources.Updating</span>
                                }
                                else
                                {
                                    <i class="bi bi-check-circle me-1"></i>
                                    <span>@EditOrderResources.UpdateOrderButton</span>
                                }
                            </button>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
    }
</div>
