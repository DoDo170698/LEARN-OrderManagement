@using OrderManagement.Blazor.ViewModels

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <div class="d-flex align-items-center">
            <i class="bi bi-box-seam me-2"></i>
            <h5 class="mb-0">Order Items</h5>
        </div>
    </div>
    <div class="card-body">
        <!-- Filter & Search Section -->
        <div class="row g-3 mb-3 align-items-end">
            <div class="col-md-8">
                <label class="form-label fw-semibold small text-muted mb-1">
                    <i class="bi bi-search me-1"></i>SEARCH PRODUCT
                </label>
                <input type="text" class="form-control" @bind="searchText" @bind:event="oninput"
                       placeholder="Search by product name...">
            </div>
            <div class="col-md-4">
                <div class="d-flex gap-2">
                    <button class="btn btn-primary flex-fill" @onclick="ApplyFiltersAsync">
                        <i class="bi bi-check-circle me-1"></i>Apply
                    </button>
                    <button class="btn btn-outline-secondary flex-fill" @onclick="ClearFiltersAsync">
                        <i class="bi bi-arrow-counterclockwise me-1"></i>Reset
                    </button>
                </div>
            </div>
        </div>

        @if (isLoading)
        {
            <div class="text-center my-3">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2">Loading items...</p>
            </div>
        }
        else if (errorMessage != null)
        {
            <div class="alert alert-danger" role="alert">
                <i class="bi bi-exclamation-triangle"></i> @errorMessage
            </div>
        }
        else if (!items.Any())
        {
            <div class="alert alert-info" role="alert">
                <i class="bi bi-info-circle"></i> No items found.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="border-0" style="cursor: pointer;" @onclick='() => SortByAsync("PRODUCT_NAME")'>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-box me-2"></i>Product
                                    @if (sortField == "PRODUCT_NAME")
                                    {
                                        <i class="bi bi-arrow-@(sortDescending ? "down" : "up") ms-1"></i>
                                    }
                                </div>
                            </th>
                            <th class="border-0 text-center" style="cursor: pointer;" @onclick='() => SortByAsync("QUANTITY")'>
                                <div class="d-flex align-items-center justify-content-center">
                                    <i class="bi bi-hash me-2"></i>Quantity
                                    @if (sortField == "QUANTITY")
                                    {
                                        <i class="bi bi-arrow-@(sortDescending ? "down" : "up") ms-1"></i>
                                    }
                                </div>
                            </th>
                            <th class="border-0 text-end" style="cursor: pointer;" @onclick='() => SortByAsync("UNIT_PRICE")'>
                                <div class="d-flex align-items-center justify-content-end">
                                    <i class="bi bi-currency-dollar me-2"></i>Unit Price
                                    @if (sortField == "UNIT_PRICE")
                                    {
                                        <i class="bi bi-arrow-@(sortDescending ? "down" : "up") ms-1"></i>
                                    }
                                </div>
                            </th>
                            <th class="border-0 text-end" style="cursor: pointer;" @onclick='() => SortByAsync("SUBTOTAL")'>
                                <div class="d-flex align-items-center justify-content-end">
                                    <i class="bi bi-calculator me-2"></i>Subtotal
                                    @if (sortField == "SUBTOTAL")
                                    {
                                        <i class="bi bi-arrow-@(sortDescending ? "down" : "up") ms-1"></i>
                                    }
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in items)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="badge bg-info bg-opacity-10 text-info me-2">
                                            <i class="bi bi-box"></i>
                                        </span>
                                        <strong>@item.ProductName</strong>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-secondary bg-opacity-10 text-dark">
                                        @item.Quantity
                                    </span>
                                </td>
                                <td class="text-end text-muted">@($"${item.UnitPrice:N2}")</td>
                                <td class="text-end">
                                    <strong class="text-primary">@($"${item.Subtotal:N2}")</strong>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light border-top border-2">
                        <tr>
                            <td colspan="3" class="text-end fw-bold">
                                <i class="bi bi-calculator-fill me-2"></i>Order Total:
                            </td>
                            <td class="text-end">
                                <span class="badge bg-success bg-opacity-75 fs-6 px-3 py-2">
                                    @($"${items.Sum(i => i.Subtotal):N2}")
                                </span>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
    </div>

    @if (!isLoading && items.Any())
    {
        <!-- Footer with Pagination & Controls -->
        <div class="card-footer bg-light">
            <div class="row align-items-center">
                <div class="col-md-4">
                    <div class="text-muted small">
                        <i class="bi bi-list-check me-1"></i>
                        Showing <strong>@items.Count</strong> items
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <nav>
                        <ul class="pagination pagination-sm mb-0 justify-content-center">
                            <li class="page-item @(!hasPreviousPage ? "disabled" : "")">
                                <button class="page-link" @onclick="FirstPageAsync" disabled="@(!hasPreviousPage)" title="First Page">
                                    <i class="bi bi-chevron-bar-left"></i>
                                </button>
                            </li>
                            <li class="page-item @(!hasPreviousPage ? "disabled" : "")">
                                <button class="page-link" @onclick="PreviousPageAsync" disabled="@(!hasPreviousPage)" title="Previous Page">
                                    <i class="bi bi-chevron-left"></i> Prev
                                </button>
                            </li>
                            <li class="page-item active">
                                <span class="page-link bg-primary border-primary">
                                    <strong>Page @currentPageNumber</strong>
                                </span>
                            </li>
                            <li class="page-item @(!hasNextPage ? "disabled" : "")">
                                <button class="page-link" @onclick="NextPageAsync" disabled="@(!hasNextPage)" title="Next Page">
                                    Next <i class="bi bi-chevron-right"></i>
                                </button>
                            </li>
                            <li class="page-item @(!hasNextPage ? "disabled" : "")">
                                <button class="page-link" @onclick="LastPageAsync" disabled="@(!hasNextPage)" title="Last Page">
                                    <i class="bi bi-chevron-bar-right"></i>
                                </button>
                            </li>
                        </ul>
                    </nav>
                </div>
                <div class="col-md-4">
                    <div class="d-flex align-items-center justify-content-end gap-2">
                        <label class="form-label mb-0 text-muted small">
                            <i class="bi bi-grid-3x3-gap me-1"></i>Per page:
                        </label>
                        <select class="form-select form-select-sm" style="width: auto;" @bind="pageSize" @bind:after="ApplyFiltersAsync">
                            <option value="5">5</option>
                            <option value="10">10</option>
                            <option value="20">20</option>
                            <option value="50">50</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
